#: import gch kivy.utils.get_color_from_hex


<OperationScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            OperationBox:


<Send_Coin_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)



    MDGridLayout:
        adaptive_height: True


        cols: 2

        MDTextField:

            size_hint_x: .5
            hint_text: "Receiver Adress: "
            mode: "fill"
        MDTextField:
            input_filter: "float"
            size_hint_x: .5
            hint_text: "Amount: "
            mode: "fill"
        MDTextField:
            size_hint_x: .5
            hint_text: "Data: "
            mode: "fill"
        MDTextField:
            password: True
            size_hint_x: .5
            hint_text: "Password: "
            mode: "fill"

<Sign_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)



    MDGridLayout:
        adaptive_height: True


        cols: 2

        MDTextField:
            size_hint_x: .5
            hint_text: "Data: "
            mode: "fill"
        MDTextField:
            password: True
            size_hint_x: .5
            hint_text: "Password: "
            mode: "fill"


<Verify_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)



    MDGridLayout:
        adaptive_height: True


        cols: 2

        MDTextField:
            size_hint_x: .5
            hint_text: "Path: "
            mode: "fill"


<OperationBox>
    adaptive_height: True


    canvas.before:

        Rectangle:
            size: self.size
            pos: self.pos



    MDGridLayout:
        size_hint_x: 1
        size_hint_y: None
        height: self.minimum_height
        padding: dp(10)
        spacing : 10
        cols: 2

        AnchorLayout:
            size_hint_y: None
            height: but1.height
            MDRoundFlatIconButton:
                id: but1
                icon: "send-circle-outline"
                on_press: root.send_coin()
                text: "Send Coin"
                halign: "right"
                font_style: "Button"


        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "file-export-outline"
                width:240

                on_press: root.export_transaction_csv()
                text: "Export Transactions CSV"
                halign: "right"
                font_style: "Button"


        AnchorLayout:
            size_hint_y: None
            height: but1.height

        AnchorLayout:
            size_hint_y: None
            height: but3.height
            MDRoundFlatIconButton:
                id: but3
                icon: "history"
                width:240
                on_press: root.transaction_history()
                text: "View Transactions History"
                halign: "right"
                font_style: "Button"




        AnchorLayout:
            size_hint_y: None
            height: but5.height
            MDRoundFlatIconButton:
                id: but5
                icon: "signature-text"
                width:240
                on_press: root.sign()
                text: "Sign Data"
                halign: "right"
                font_style: "Button"


        AnchorLayout:
            size_hint_y: None
            height: but6.height
            MDRoundFlatIconButton:
                id: but6
                icon: "file-check-outline"
                width:240
                on_press: root.verify()
                text: "Verify Signed Data"
                halign: "right"
                font_style: "Button"
