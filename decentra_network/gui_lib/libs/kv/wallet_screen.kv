#: import gch kivy.utils.get_color_from_hex


<WalletScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            WalletBox:
                text : "Balance"


<Delete_Wallet_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)



    MDGridLayout:
        adaptive_height: True


        cols: 2
        DecentraLabel:
            text: "Are you sure ?"
            halign: "center"
            font_style: "H4"

<Create_Wallet_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)



    MDGridLayout:
        adaptive_height: True


        cols: 2


        MDTextField:
            password: True
            size_hint_x: .5
            hint_text: "Password: "
            mode: "fill"

<WalletBox>
    adaptive_height: True



    canvas.before:
        Color:
            rgba: gch("#ffffff")
        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        size_hint_x: 1
        size_hint_y: None
        height: self.minimum_height
        padding: dp(10)
        cols:2
        spacing: 10

        AnchorLayout:
            size_hint_y: None
            height: but1.height
            MDRoundFlatIconButton:
                id: but1
                icon: "wallet-outline"
                on_press: root.show_example_list_bottom_sheet()
                DecentraLabel:
                    text: "Wallets"
                    halign: "right"
                    font_style: "Button"


        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "wallet-plus-outline"
                on_press: root.Wallet_Create()
                DecentraLabel:
                    text: "Create Wallet"
                    halign: "right"
                    font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but3.height
            MDRoundFlatIconButton:
                id: but3
                icon: "safe"
                on_press: root.reflesh_balance()
                DecentraLabel:
                    text: root.text
                    halign: "right"
                    font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "delete"
                on_press: root.Wallet_Delete()
                text_color: 1, 0, 0, 1

                DecentraLabel:
                    text: "Delete Wallet"
                    halign: "right"
                    font_style: "Button"
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1
                    line_color: 1, 0, 1, 1
