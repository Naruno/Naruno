#: import gch kivy.utils.get_color_from_hex


<SettingsScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            SettingsBox:
                
            



<SettingsBox>
    adaptive_height: True
    

    canvas.before:
        Color:
            rgba: gch("#ffffff")
        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:

        cols: 2

        DecentraLabel:
            text: "DEBUG MODE"
            halign: "center"
            font_style: "Button"

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.d_first_status
                on_active: root.D_Status_Changing(self, self.active)


        DecentraLabel:
            text: "TEST MODE"
            halign: "center"
            font_style: "Button" 


        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.t_first_status
                on_active: root.T_Status_Changing(self, self.active)         
 

