#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex


<DecentraWelcomeScreen>
    canvas:
        Color:
            rgba: gch("#ffffff")
        Rectangle:
            pos: self.pos
            size: self.size



    MDGridLayout:
        padding: dp(50)
        cols: 1

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Image:
                source: f"{environ['DECENTRA_ROOT']}/gui_lib/images/logo.ico"



        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            MDProgressBar:
                id : pb
                min :0
                max :100
                value: 0
