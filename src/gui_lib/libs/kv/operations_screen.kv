#: import gch kivy.utils.get_color_from_hex


<OperationScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            OperationBox:
                
            
<Send_Coin_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)
    


    MDGridLayout:
        adaptive_height: True


        cols: 2

        MDTextField:

            size_hint_x: .5
            hint_text: "Receiver Adress: "
            mode: "fill"
        MDTextField:
            input_filter: "float"
            size_hint_x: .5
            hint_text: "Amount: "
            mode: "fill"
        MDTextField:
            password: True
            size_hint_x: .5
            hint_text: "Password: "
            mode: "fill"       


<OperationBox>
    adaptive_height: True
    

    canvas.before:
        Color:
            rgba: gch("#ffffff")
        Rectangle:
            size: self.size
            pos: self.pos
    


    MDGridLayout:
        size_hint: 1, None
        height: self.minimum_height
        padding: dp(10)
        spacing : 10
        cols: 2

        AnchorLayout:
            size_hint_y: None
            height: but1.height
            MDRoundFlatIconButton:
                id: but1
                icon: "send-circle-outline"
                on_press: root.send_coin()
                DecentraLabel:
                    text: "Send Coin"
                    halign: "right"
                    font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "file-export-outline"
                width:240

                on_press: root.export_transaction_csv()
                DecentraLabel:
                    text: "Export Transactions CSV"
                    halign: "right"
                    font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but1.height

        AnchorLayout:
            size_hint_y: None
            height: but3.height
            MDRoundFlatIconButton:
                id: but3
                icon: "history"
                width:240
                on_press: root.transaction_history()
                DecentraLabel:
                    text: "View Transactions History"
                    halign: "right"
                    font_style: "Button"
            
        
