#: import NavigationItem naruno.gui_lib.libs.baseclass.tabnavigation.NavigationItem
#: import NavigationBar naruno.gui_lib.libs.baseclass.tabnavigation.NavigationBar

#: import WalletScreen naruno.gui_lib.libs.baseclass.wallet_screen.WalletScreen
#: import OperationScreen naruno.gui_lib.libs.baseclass.operations_screen.OperationScreen
#: import NodeScreen naruno.gui_lib.libs.baseclass.node_screen.NodeScreen
#: import SettingsScreen naruno.gui_lib.libs.baseclass.settings_screen.SettingsScreen


<NarunoRootScreen>

    MDBoxLayout:
        orientation: 'vertical'

        NavigationBar:
            id: nav_bar

            NavigationItem:
                text: "WALLET"
                icon: "wallet-outline"
                on_release:
                    scr_manager.transition.direction = "right"
                    scr_manager.current = "WALLET"

            NavigationItem:
                text: "OPERATIONS"
                icon: "semantic-web"
                on_release:
                    scr_manager.transition.direction = "right" \
                    if scr_manager.current in ["NODE", "SETTINGS"] \
                    else "left"
                    scr_manager.current = "OPERATIONS"

            NavigationItem:
                text: "NODE"
                icon: "access-point-network"
                on_release:
                    scr_manager.transition.direction = "right" \
                    if scr_manager.current == "SETTINGS" \
                    else "left"
                    scr_manager.current = "NODE"


            NavigationItem:
                text: "SETTINGS"
                icon: "tune"
                on_release:
                    scr_manager.transition.direction = "left"
                    scr_manager.current = "SETTINGS"

            NavigationItem:
                icon: "close-thick"
                on_release: root.close_app()

        ScreenManager:
            id: scr_manager

            WalletScreen:
                name: "WALLET"

            OperationScreen:
                name: "OPERATIONS"

            NodeScreen:
                name: "NODE"


            SettingsScreen:
                name: "SETTINGS"


<ScrollView>
    bar_width: 0


<NarunoLabel@MDLabel>
    adaptive_height: True


<NarunoListItem>
    size_hint_y: None
    height: dp(60)

    canvas:
        Color:
            rgba:
                self.theme_cls.divider_color
        Line:
            points: (root.x+dp(16), root.y, root.x+self.width-dp(16)-0, root.y)
    canvas.before:

        Rectangle:
            size: self.size
            pos: self.pos

    MDBoxLayout:
        adaptive_size: True
        padding: dp(15)
        pos_hint: {"center_x": .5, "center_y": .5}

        MDIcon:
            icon: "minus-thick"
            halign: "center"
            pos_hint: {"center_y": .5}
            theme_text_color: "Custom"
            text_color: root.bar_color

            canvas.before:
                PushMatrix
                Rotate:
                    angle: 90
                    origin: self.center
            canvas.after:
                PopMatrix

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        pos_hint: {"center_x": .5, "center_y": .5}
        spacing: dp(2)

        NarunoLabel:
            text: root.text
            font_style: "Subtitle1"

        NarunoLabel:
            text: root.secondary_text
            theme_text_color: "Hint"
            font_style: "Button"

    MDBoxLayout:
        orientation: 'vertical'
        padding: (0, 0, 0, dp(10))
        adaptive_height: True

        NarunoLabel:
            text: root.tertiary_text
            theme_text_color: "Secondary"
            pos_hint: {"center_x": .5, "center_y": .5}
            halign: "right"
            font_style: "H3"
            font_size: sp(20)

    MDBoxLayout:
        adaptive_size: True
        padding: dp(15)
        pos_hint: {"center_x": .5, "center_y": .5}

        MDIcon:
            icon: "chevron-right"
            halign: "center"
            pos_hint: {"center_y": .5}
            theme_text_color: "Hint"
